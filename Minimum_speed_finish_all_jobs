#include<bits/stdc++.h>
using namespace std;

bool isPossibleJobs(int* jobs,int n,int hours)
{
    int sum=0;
    for(int i=0;i<n;i++)
    {
        sum+=((jobs[i]-1)/mid) + 1; 
    }

    if(sum<=hours)
    {
        return true;
    }
    else{
        return false;
    }
}

int minSpeed(int* jobs,int n,int hours)
{
    int l=1;
    int h=jobs[n-1];

    int mid=(l+h)/2;
    int answer=0;
    while(h>=l)
    {
        if(isPossibleJobs(jobs,n,hours,mid))
        {
            answer=mid;
            h=mid-1;
        }
        else{
            l=mid+1;
        }
    }
    return answer;
}

int main()
{
    int t;
    while(t--)
    {
        int n;
        cin>>n;
        int hours;
        cin>>hours;
        int jobs[n];
        for(int i=0;i<n;i++)
        {
            cin>>jobs[i];
        }

        cout<<minSpeed(jobs,n,hours);

    }
}